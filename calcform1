    private void RestaMouseClicked(java.awt.event.MouseEvent evt) {                                   
        // TODO add your handling code here:
         int valor1; 
    int valor2;
    int result; 
    
    valor1 = Integer.parseInt(val1.getText());
    valor2 = Integer.parseInt(val2.getText());
    result = valor1 - valor2;
    
    this.var3.setText(String.valueOf(result));
    }                                  

    private void MutiplicacionMouseClicked(java.awt.event.MouseEvent evt) {                                           
        // TODO add your handling code here:
         int valor1; 
    int valor2;
    int result; 
    
    valor1 = Integer.parseInt(val1.getText());
    valor2 = Integer.parseInt(val2.getText());
    result = valor1 * valor2;
    
    this.var3.setText(String.valueOf(result));
    }                                          

    private void DivisionMouseClicked(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
         int valor1; 
    int valor2;
    int result; 
    
    valor1 = Integer.parseInt(val1.getText());
    valor2 = Integer.parseInt(val2.getText());
    result = valor1 / valor2;
    
    this.var3.setText(String.valueOf(result));
    }                                     

   
